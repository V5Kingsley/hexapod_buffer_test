<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hexapod">

  <xacro:property name="M_PI" value="3.1415926535897931"/>
  <xacro:property name="bodyradius" value="0.1800"/>
  <xacro:property name="bodylength" value="0.1000"/>
  <xacro:property name="bodymass" value="3"/>

  <xacro:property name="bridgelength" value="0.01"/>
  <xacro:property name="bridgeradius" value="0.02"/>  
  <xacro:property name="bridgemass" value="0.5"/>

  <xacro:property name="rolllength" value="0.14489"/>
  <xacro:property name="rollradius" value="0.03"/>  
  <xacro:property name="rollmass" value="${rolllength*5}"/>

  <xacro:property name="pitch1length" value="0.164"/>
  <xacro:property name="pitch1radius" value="0.03"/>
  <xacro:property name="pitch1mass" value="${pitch1length*5}"/>

  <xacro:property name="pitch2length" value="0.157"/>
  <xacro:property name="pitch2radius" value="0.03"/>
  <xacro:property name="pitch2mass" value="${pitch2length*5}"/>
  
  <xacro:property name="sticklength" value="0.01"/>
  <xacro:property name="stickradius" value="0.08"/>
  <xacro:property name="stickmass" value="0.5"/>

  <xacro:property name="damping" value="1"/>

 


<link name="base_link">
  <visual>
   <geometry>
      <box size="0.01 0.01 0.01"/>
   </geometry>
   <material name="black">
     <color rgba="0 0 0 100"/>
   </material>
  </visual>
</link>

<!--body-->
<link name="body">
<visual>
   <geometry>
     <cylinder length="${bodylength}" radius="${bodyradius}"/>
   </geometry>
   <material name="black">
     <color rgba="0 0 0 100"/>
   </material>
  </visual>
   
 <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
     <cylinder length="${bodylength}" radius="${bodyradius}"/>
      </geometry>
    </collision>

<inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${bodymass}"/>
      <inertia
        ixx="0" ixy="0.0" ixz="0.0"
        iyy="0" iyz="0.0"
        izz="0"/>
    </inertial>
</link>
  <gazebo reference="body">
    <material>Gazebo/Red</material>
  </gazebo>

<joint name="body" type="fixed">
  <axis xyz="0 0 1"/>
  <parent link="base_link"/>
  <child link="body"/>
  <origin rpy="0 0 0" xyz="0 0 0"/>
</joint>


  <xacro:macro name="leg" params="leg r p ry x y">

<link name="${leg}_bridge">
  <visual>
    <origin xyz="0 0 ${bridgelength/2}" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${bridgelength}" radius="${bridgeradius}"/>
    </geometry>
    <material name="white">
      <color rgba="255 255 255 1"/>
    </material>
  </visual>
  <inertial>
      <origin xyz="0 0 ${bridgelength/2}" rpy="0 0 0"/>
      <mass value="${bridgemass}"/>
      <inertia
        ixx="0" ixy="0.0" ixz="0.0"
        iyy="0" iyz="0.0"
        izz="0"/>
    </inertial>
  <collision>
    <origin xyz="0 0 ${bridgelength/2}" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${bridgelength}" radius="${bridgeradius}"/>
    </geometry>
  </collision>
</link>
  <gazebo reference="${leg}_bridge">
    <material>Gazebo/Black</material>
  </gazebo>
<joint name="${leg}_bridge" type="fixed">
  <axis xyz="0 0 1"/>
  <parent link="body"/>
  <child link="${leg}_bridge"/>
  <origin rpy="${r} ${p} ${ry}" xyz="${x} ${y} 0"/>
</joint>

<link name="${leg}_roll">
  <visual>
    <origin xyz="0 0 ${rolllength/2}" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${rolllength}" radius="${rollradius}"/>
    </geometry>
    <material name="blue">
      <color rgba="0 0 255 1"/>
    </material>
  </visual>
  <inertial>
    <origin xyz="0 0 ${rolllength/2}" rpy="0 0 0"/>
      <mass value="${rollmass}"/>
      <inertia
        ixx="${0.5*rollmass*rollradius*rollradius}" ixy="0.0" ixz="0.0"
        iyy="${(3*rollmass*rollradius*rollradius+4*rollmass*rolllength*rolllength)/12}" iyz="0.0"
        izz="${(3*rollmass*rollradius*rollradius+4*rollmass*rolllength*rolllength)/12}"/>
    </inertial>
  <collision>
    <origin xyz="0 0 ${rolllength/2}" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${rolllength}" radius="${rollradius}"/>
    </geometry>
  </collision>
</link>
  <gazebo reference="${leg}_roll">
    <material>Gazebo/Black</material>
  </gazebo>
<joint name="${leg}_roll" type="revolute">
  <axis xyz="1 0 0"/>
  <limit effort="300" lower="-${M_PI/2}" upper="${M_PI/2}" velocity="1"/>
  <dynamics damping="${damping}"/>
  <parent link="${leg}_bridge"/>
  <child link="${leg}_roll"/>
  <origin rpy="0 0 0" xyz="0 0 ${bridgelength}"/>
</joint>



<link name="${leg}_pitch1">
  <visual>
    <origin xyz="0 0 ${pitch1length/2}" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${pitch1length}" radius="${pitch1radius}"/>
    </geometry>
    <material name="green">
      <color rgba="0 128 0 1"/>
    </material>
  </visual>
 <inertial>
    <origin xyz="0 0 ${pitch1length/2}" rpy="0 0 0"/>
      <mass value="${pitch1mass}"/>
      <inertia
        ixx="${(3*pitch1mass*pitch1radius*pitch1radius+4*pitch1mass*pitch1length*pitch1length)/12}" ixy="0.0" ixz="0.0"
        iyy="${0.5*pitch1mass*pitch1radius*pitch1radius}" iyz="0.0"
        izz="${(3*pitch1mass*pitch1radius*pitch1radius+4*pitch1mass*pitch1length*pitch1length)/12}"/>
    </inertial>
  <collision>
    <origin xyz="0 0 ${pitch1length/2}" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${pitch1length}" radius="${pitch1radius}"/>
    </geometry>
  </collision>
</link>
  <gazebo reference="${leg}_pitch1">
    <material>Gazebo/Red</material>
  </gazebo>
<joint name="${leg}_pitch1" type="revolute">
  <axis xyz="0 1 0"/>
  <limit effort="300" lower="-${M_PI/2}" upper="${M_PI/2}" velocity="1"/>
  <dynamics damping="${damping}"/>
  <parent link="${leg}_roll"/>
  <child link="${leg}_pitch1"/>
  <origin rpy="0 0 0" xyz="0 0 ${rolllength}"/>
</joint>

<link name="${leg}_pitch2">
  <visual>
    <origin xyz="0 0 ${pitch2length/2}" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${pitch2length}" radius="${pitch2radius}"/>
    </geometry>
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
  </visual>
 <inertial>
    <origin xyz="0 0 ${pitch2length/2}" rpy="0 0 0"/>
      <mass value="${pitch2mass}"/>
      <inertia
        ixx="${(3*pitch2mass*pitch2radius*pitch2radius+4*pitch2mass*pitch2length*pitch2length)/12}" ixy="0.0" ixz="0.0"
        iyy="${0.5*pitch2mass*pitch2radius*pitch2radius}" iyz="0.0"
        izz="${(3*pitch2mass*pitch2radius*pitch2radius+4*pitch2mass*pitch2length*pitch2length)/12}"/>
    </inertial>
  <collision>
    <origin xyz="0 0 ${pitch2length/2}" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${pitch2length}" radius="${pitch2radius}"/>
    </geometry>
  </collision>
</link>
  <gazebo reference="${leg}_pitch2">
    <material>Gazebo/Black</material>
    <mu1 value="200"/>
    <mu2 value="200"/>
  </gazebo>
<joint name="${leg}_pitch2" type="revolute">
  <axis xyz="0 1 0"/>
  <limit effort="300" lower="-${M_PI/2}" upper="${M_PI/3}" velocity="1"/>
  <dynamics damping="${damping}"/>
  <parent link="${leg}_pitch1"/>
  <child link="${leg}_pitch2"/>
  <origin rpy="0 ${M_PI/2} 0" xyz="0 0 ${pitch1length}"/>
</joint>

<!--stick-->

<link name="${leg}_stick1">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.001" radius="0.001"/>
    </geometry>
    <material name="yellow">
      <color rgba="255 255 0 1"/>
    </material>
  </visual>
 <inertial>
    <origin xyz="0 0 ${pitch2length+sticklength}" rpy="0 0 0"/>
      <mass value="${stickmass}"/>
      <inertia
        ixx="${(3*stickmass*stickradius*stickradius+4*stickmass*sticklength*sticklength)/12}" ixy="0.0" ixz="0.0"
        iyy="${(3*stickmass*stickradius*stickradius+4*stickmass*sticklength*sticklength)/12}" iyz="0.0"
        izz="${0.5*stickmass*stickradius*stickradius}"/>
    </inertial>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.001" radius="0.001"/>
    </geometry>
  </collision>
</link>
<joint name="${leg}_stick1" type="revolute">
  <limit effort="300" lower="-${M_PI/2}" upper="${M_PI/2}" velocity="1"/>
  <dynamics damping="${damping}"/>
  <axis xyz="1 0 0"/>
  <parent link="${leg}_pitch2"/>
  <child link="${leg}_stick1"/>
  <origin rpy="0 0 0" xyz="0 0 ${pitch2length+sticklength}"/>
</joint>
  <gazebo reference="${leg}_stick1">
    <material>Gazebo/Black</material>
    <mu1 value="10"/>
    <mu2 value="10"/>
  </gazebo>

<link name="${leg}_stick2">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.001" radius="0.001"/>
    </geometry>
    <material name="yellow">
      <color rgba="255 255 0 1"/>
    </material>
  </visual>
 <inertial>
    <origin xyz="0 0 ${pitch2length+sticklength}" rpy="0 0 0"/>
      <mass value="${stickmass}"/>
      <inertia
        ixx="${(3*stickmass*stickradius*stickradius+4*stickmass*sticklength*sticklength)/12}" ixy="0.0" ixz="0.0"
        iyy="${(3*stickmass*stickradius*stickradius+4*stickmass*sticklength*sticklength)/12}" iyz="0.0"
        izz="${0.5*stickmass*stickradius*stickradius}"/>
    </inertial>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.001" radius="0.001"/>
    </geometry>
  </collision>
</link>
<joint name="${leg}_stick2" type="revolute">
  <limit effort="300" lower="-${M_PI/2}" upper="${M_PI/2}" velocity="1"/>
  <dynamics damping="${damping}"/>
  <axis xyz="0 1 0"/>
  <parent link="${leg}_stick1"/>
  <child link="${leg}_stick2"/>
  <origin rpy="0 0 0" xyz="0 0 0"/>
</joint>
  <gazebo reference="${leg}_stick2">
    <material>Gazebo/Black</material>
    <mu1 value="10"/>
    <mu2 value="10"/>
  </gazebo>

<link name="${leg}_stick3">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${sticklength}" radius="${stickradius}"/>
    </geometry>
    <material name="yellow">
      <color rgba="255 255 0 1"/>
    </material>
  </visual>
 <inertial>
    <origin xyz="0 0 ${pitch2length+sticklength}" rpy="0 0 0"/>
      <mass value="${stickmass}"/>
      <inertia
        ixx="${(3*stickmass*stickradius*stickradius+4*stickmass*sticklength*sticklength)/12}" ixy="0.0" ixz="0.0"
        iyy="${(3*stickmass*stickradius*stickradius+4*stickmass*sticklength*sticklength)/12}" iyz="0.0"
        izz="${0.5*stickmass*stickradius*stickradius}"/>
    </inertial>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${sticklength}" radius="${stickradius}"/>
    </geometry>
  </collision>
</link>
<joint name="${leg}_stick3" type="revolute">
  <limit effort="300" lower="-${M_PI/2}" upper="${M_PI/2}" velocity="1"/>
  <dynamics damping="${damping}"/>
  <axis xyz="0 0 1"/>
  <parent link="${leg}_stick2"/>
  <child link="${leg}_stick3"/>
  <origin rpy="0 0 0" xyz="0 0 0"/>
</joint>
  <gazebo reference="${leg}_stick3">
    <material>Gazebo/Black</material>
    <mu1 value="2000"/>
    <mu2 value="2000"/>
  </gazebo>




