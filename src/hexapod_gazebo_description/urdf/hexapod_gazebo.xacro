<transmission name="${leg}_tran1">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${leg}_roll">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="${leg}_motor1">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

<transmission name="${leg}_tran2">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${leg}_pitch1">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="${leg}_motor2">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

<transmission name="${leg}_tran3">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${leg}_pitch2">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="${leg}_motor3">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

<transmission name="${leg}_tran4">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${leg}_stick1">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="${leg}_stick1">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

<transmission name="${leg}_tran5">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${leg}_stick2">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="${leg}_stick2">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

<transmission name="${leg}_tran6">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${leg}_stick3">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="${leg}_stick3">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <gazebo>
     <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
       <robotNamespace>/hexapod</robotNamespace>
     </plugin>
  </gazebo>
  <gazebo>
     <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
       <jointName>${leg}_roll, ${leg}_pitch1, ${leg}_pitch2</jointName>
     </plugin>
  </gazebo>

</xacro:macro>

<xacro:leg leg="leg1" r="0" p="1.57075" ry="0" x="${bodyradius}" y="0"/>
<xacro:leg leg="leg2" r="-1.04720" p="1.57075" ry="0" x="${bodyradius*0.5}" y="${bodyradius*0.8660254038}"/>
<xacro:leg leg="leg3" r="-2.09440" p="1.57075" ry="0" x="-${bodyradius*0.5}" y="${bodyradius*0.8660254038}"/>
<xacro:leg leg="leg4" r="-3.14159" p="1.57075" ry="0" x="-${bodyradius}" y="0"/>
<xacro:leg leg="leg5" r="2.099440" p="1.57075" ry="0" x="-${bodyradius*0.5}" y="-${bodyradius*0.8660254038}"/>
<xacro:leg leg="leg6" r="1.04720" p="1.57075" ry="0" x="${bodyradius*0.5}" y="-${bodyradius*0.8660254038}"/>




</robot>
